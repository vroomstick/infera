# Infera Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration (REQUIRED)
# ===========================================
# PostgreSQL with pgvector is required
# Start the database: docker compose up -d db
DATABASE_URL=postgresql://infera:infera_dev_password@localhost:5432/infera

# PostgreSQL password (used by docker-compose)
POSTGRES_PASSWORD=infera_dev_password

# ===========================================
# OpenAI API Key (Optional)
# ===========================================
# Only required for GPT summarization feature
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# API Security (Optional)
# ===========================================
# Set this to require API key authentication
INFERA_API_KEY=

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=*

# Rate limiting (requests per time period)
RATE_LIMIT=60/minute

# ===========================================
# Environment & Logging
# ===========================================
# Options: development, production
ENVIRONMENT=development

# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
